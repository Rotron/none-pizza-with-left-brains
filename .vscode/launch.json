    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client: Webpack",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "build"],
            "port": 9000
        },
        {
            "name": "Data browser",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:9000/",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/client"
        }
    ]
}
